# Local Development Configuration Example
# Copy this file to application-local.yml and fill in your local values
# application-local.yml is gitignored and will not be committed to the repository

spring:
  data:
    mongodb:
      # Your local MongoDB connection string
      uri: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=Cluster0

jwt:
  # Your local JWT secret key (must be at least 256 bits long)
  secret: YourLocalJWTSecretKeyForDevelopmentMustBeAtLeast256BitsLongForSecurity

# Optional: Override other settings for local development
server:
  port: 8080

logging:
  level:
    root: INFO
    com.pokemon: DEBUG

